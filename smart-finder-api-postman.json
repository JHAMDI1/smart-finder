{
  "info": {
    "_postman_id": "smart-finder-api",
    "name": "Smart Finder API",
    "description": "Collection API pour Smart Finder PFE - Espace de travail recommandation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{base_url}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"nom\": \"Test\",\n  \"prenom\": \"User\",\n  \"role\": \"USER\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{base_url}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Lieux",
      "item": [
        {
          "name": "Get All Lieux",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/lieux?page=0&size=20"
          }
        },
        {
          "name": "Get Lieu by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/lieux/1"
          }
        },
        {
          "name": "Create Lieu",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{base_url}}/lieux",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Café Test\",\n  \"adresse\": \"123 Rue Test\",\n  \"description\": \"Café calme avec wifi\",\n  \"critereIds\": [1, 3]\n}"
            }
          }
        },
        {
          "name": "Search Lieux",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{base_url}}/lieux/search",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"critereIds\": [1, 3, 5],\n  \"page\": 0,\n  \"size\": 20\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Smart Search",
      "item": [
        {
          "name": "Search Natural Language",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{base_url}}/smart-search",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"café calme avec wifi ouvert le dimanche\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Critères",
      "item": [
        {
          "name": "Get All Critères",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/criteres"
          }
        },
        {
          "name": "Create Critère (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{admin_token}}"}
            ],
            "url": "{{base_url}}/criteres",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"vegan\",\n  \"description\": \"Options vegan-friendly\",\n  \"categorie\": \"SERVICE\",\n  \"icon\": \"leaf\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Avis",
      "item": [
        {
          "name": "Get Avis by Lieu",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/lieux/1/avis"
          }
        },
        {
          "name": "Create Avis",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{base_url}}/lieux/1/avis",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"note\": 5,\n  \"commentaire\": \"Excellent café !\"\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8080/api/v1"},
    {"key": "token", "value": "your_jwt_token_here"},
    {"key": "admin_token", "value": "admin_jwt_token_here"}
  ]
}
